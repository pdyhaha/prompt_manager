#!/bin/bash

# Prompt Manager 启动脚本
# 启动 Node.js 服务器并打开浏览器

# 添加常见的 Node.js 安装路径到 PATH
export PATH="/usr/local/bin:/opt/homebrew/bin:$HOME/.nvm/versions/node/$(ls $HOME/.nvm/versions/node 2>/dev/null | tail -1)/bin:$PATH"

# 获取应用程序目录
APP_DIR="$( cd "$( dirname "$0" )/../../.." && pwd )"
cd "$APP_DIR"

# 检查 Node.js 是否安装
if ! command -v node &> /dev/null; then
    osascript -e 'display dialog "未检测到 Node.js，请先安装 Node.js。\n\n下载地址: https://nodejs.org" buttons {"确定"} default button 1 with icon stop with title "Prompt Manager"'
    exit 1
fi

# 检查依赖是否安装
if [ ! -d "node_modules" ]; then
    osascript -e 'display notification "正在安装依赖..." with title "Prompt Manager"'
    npm install
fi

# 检查端口是否被占用
if lsof -Pi :3000 -sTCP:LISTEN -t >/dev/null; then
    # 端口已被占用，直接打开浏览器
    open "http://localhost:3000"
    exit 0
fi

# 启动服务器
osascript -e 'display notification "正在启动服务..." with title "Prompt Manager"'

# 后台启动服务器
nohup node server.js > /tmp/prompt_manager.log 2>&1 &
SERVER_PID=$!

# 保存 PID 以便后续停止
echo $SERVER_PID > /tmp/prompt_manager.pid

# 等待服务器启动
sleep 2

# 检查服务器是否成功启动
if curl -s http://localhost:3000 > /dev/null; then
    osascript -e 'display notification "服务已启动！" with title "Prompt Manager"'
    open "http://localhost:3000"
else
    osascript -e 'display dialog "服务启动失败，请检查日志。\n日志位置: /tmp/prompt_manager.log" buttons {"确定"} default button 1 with icon stop with title "Prompt Manager"'
fi
